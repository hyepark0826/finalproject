<script th:inline="javascript">
const update = () => {
    const pw = [[${updateMember.memberPassword}]];
    const pwConfirm = document.getElementById("memberPassword").value;
    if (pw == pwConfirm){
      updateForm.submit();
    }else{
      alert("비밀번호가 틀립니다!!");
    }
  }
</script>
